<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:endColor="#3D3D3D"
                android:startColor="#7A7A7A"
                android:angle="90" 
                android:type="linear"/>
            
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient
                android:endColor="#7A7A7A"
                android:startColor="#3D3D3D"
                android:angle="90" 
                android:type="linear"/>
            
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
</selector>