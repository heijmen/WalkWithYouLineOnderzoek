<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:endColor="#76b42f"
                android:startColor="#96d152"
                android:angle="90" 
                android:type="linear"/>
            
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:endColor="#96d152"
                android:startColor="#76b42f"
                android:angle="90" 
                android:type="linear"/>
            
